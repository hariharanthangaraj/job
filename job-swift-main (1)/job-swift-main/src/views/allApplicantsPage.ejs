<div class="applicants-page-body">
	<!-- Applicants Table Container -->
	<div class="container applicants-table-container">
		<div class="row">
			<% jobs.forEach((job) => { %>
			<div class="col-md-12 mb-5">
				<!-- Heading -->
				<h2 class="text-center mb-4">
					Applicants for
					<span class="text-primary"> <%=job.jobDesignation%> </span>
					at <span class="text-primary"><%=job.companyName%></span>
				</h2>

				<!-- Applicants Table -->
				<table class="table table-dark table-bordered">
					<thead>
						<tr>
							<th scope="col">S.no</th>
							<th scope="col">Applicant Name</th>
							<th scope="col">Email</th>
							<th scope="col">Phone No</th>
							<th scope="col">Resume</th>
						</tr>
					</thead>
					<tbody>
						<% job.applicants.forEach((applicant, index) => { %>
						<tr>
							<th scope="row"><%=index+1%></th>
							<td><%=applicant.name%></td>
							<td><%=applicant.email%></td>
							<td><%=applicant.contact%></td>
							<td>
								<a
									href="<%=applicant.resumePath%>"
									target="_blank"
									type="button"
									class="btn btn-outline-light"
								>
									Show Resume
								</a>
							</td>
						</tr>
						<% }) %>
					</tbody>
				</table>
			</div>
			<% }) %>
		</div>
	</div>
</div>
